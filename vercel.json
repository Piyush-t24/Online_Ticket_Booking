{
  "installCommand": "npm install",
  "buildCommand": "npm run build:all",
  "outputDirectory": "public",
  "nodeVersion": "18.x",
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/admin/index.html"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/admin/$1"
    },
    {
      "source": "/author",
      "destination": "/author/index.html"
    },
    {
      "source": "/author/(.*)",
      "destination": "/author/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ]
}

